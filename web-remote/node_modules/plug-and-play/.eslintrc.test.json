{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "plugin:coffee/disable-incompatible",
    "plugin:coffee/eslint-recommended",
    "plugin:mocha/recommended",
    "plugin:coffee/prettier"
  ],
  "parser": "eslint-plugin-coffee",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["coffee", "mocha"],
  "rules": {
    "coffee/comma-style": "off",
    "coffee/id-length": "off",
    "coffee/implicit-arrow-linebreak": "off",
    "coffee/jsx-wrap-multilines": "off",
    "indent": ["error", 2]
  }
}
